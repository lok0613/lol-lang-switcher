<Window x:Class="LolLangSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LolLangSwitcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="600" FontSize="20"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox Header="Game" Width="300">
            <StackPanel  Margin="0,20,0,0" Name="language_form">
                <Button Content="中文大廳介面"  Click="ChineseLobby_Click"></Button>
                <Button Content="中文遊戲介面" Click="ChineseGame_Click"></Button>
                <Button Content="English Lobby" Click="EnglishLobby_Click"></Button>
                <Button Content="English Game" Click="EnglishGame_Click"></Button>
            </StackPanel>
        </GroupBox>
        <StatusBar Name="status_bar" Height="30" VerticalAlignment="Bottom">
            <Label Height="30" FontSize="12" MouseDoubleClick="FindLolClient"/>
        </StatusBar>
    </Grid>
</Window>
